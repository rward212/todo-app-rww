<section id="todos">
	<header>
		<h2>Editing '<%= @todos[:name] %>'</h2>
		<ul>
			<li>
				<form action="/lists/<%= params[:id] %>/delete" method="post">
					<button type='submit' class='delete'>Delete List</button>
				</form>
		</ul>
	</header>
</section>

<form action="/lists/<%= params[:number] %>" method="post">
	<dl>
		<dt>
			<label for="list_name">Enter the new name for your list:</label>
		</dt>
		<dd>
			<input name="list_name" placeholder="List Name" type="text" value="<%= params[:list_name] || @todos[:name] %>">
		</dd>
	</dl>
	<fieldset class="actions">
		<input type="submit" name="Save">
		<a href="/lists/<%= params[:number] %>">Cancel</a>
	</fieldset>
</form>
